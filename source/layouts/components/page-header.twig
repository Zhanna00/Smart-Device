<header class="page-header {{ bemMix }}" data-fix-block>
	<div class="page-header__inner container">
		{% include 'logo.twig' with { bemMix: 'logo--headable', isHeading: true } %}

		{% include 'contacts.twig' with { bemMix: 'page-header__contacts' } %}

		{% if callbackLink %}
			<a class="page-header__button button button--secondary" href="{{ callbackLink.url }}" {{ callback ? 'data-open-modal="' ~ callback.modalId ~ '"' }}>
				{{ callbackLink.title }}
			</a>
		{% endif %}
	</div>
</header>
