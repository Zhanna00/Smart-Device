<section class="main-header">
	{% include 'picture.twig' with { className: 'main-header__image', image } %}

	<div class="main-header__container container">
		{{ content }}

		<a class="main-header__button" href="{{ link.url }}">
			<span class="mobile-hide">{{ link.title }}</span>
			<span class="mobile-show">{{ link.mobileTitle }}</span>
		</a>
	</div>
</section>
